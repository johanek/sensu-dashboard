.col-lg-12
  - if defined?(@priorityevents)
    - if @priorityevents.has_key? :critical
      - if @priorityevents[:critical].count > 0
        .panel.panel-danger
          .panel-heading{:title => "Critical Priority Alerts"}
            .h3 Critical Priority Alerts
          .panel-body
            %table.table.table-condensed.table-hover{:width => "100%"}
              %tbody
                %tr
                  %th{:style => "min-width: 220px"} Client
                  %th{:style => "min-width: 200px"} Check
                  %th Output
              - @priorityevents[:critical].each do |event|
                %tr
                  - if event[:status] == 2
                    %td 
                      %b #{event[:client]} 
                    %td #{event[:check]}
                    %td #{event[:output]}
      
    - if @priorityevents.has_key? :high
      - if @priorityevents[:high].count > 0
        .panel.panel-warning
